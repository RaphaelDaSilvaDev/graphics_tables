      "text": "Velocidade",
      "y": -120
    },
    "labels": {
      "y": 16
    }
  },

  "plotOptions": {
    "solidgauge": {
      "dataLabels": {
        "y": 5,
        "borderWidth": 0,
        "useHTML": true
      }
    }
  },
  "series": [
    {
      "name": "Speed",
      "data": [10],
      "dataLabels": {
        "format": "<div style='text-align:center'><span style='font-size:25px'>{y}</span><br/><span style='font-size:12px;opacity:0.4'>km/h</span></div>"
      },
      "tooltip": {
